{
  "manifest_version": 3,
  "name": "Select Care Extension",
  "version": "1.0.0",
  "description": "A Chrome extension for Select Care",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "side_panel": {
    "default_path": "dashboard.html"
  },
  "action": {
    "default_popup": "src/extension_popup/popup.html",
    "default_title": "Select Care",
    "default_icon": "icon16.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "sidePanel"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }

}
